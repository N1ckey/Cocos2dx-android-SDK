<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/elva_card_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/zfcg"
            android:scaleType="centerCrop" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/elva_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="top|start"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:text="ELVA AI, The BEST solution for online Product Operating and Customer Service"
                android:textSize="16sp" />

            <!--android:layout_below="@id/elva_card_title"-->
            <TextView
                android:id="@+id/elva_card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:gravity="bottom|start"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingTop="2dp"
                android:text="2017/04/20"
                android:textSize="12sp"
                android:paddingStart="3dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>